---
import "~/styles/globals.css";
import "@fontsource/poppins";
import ControlBtnsGimmick from "~/components/ControlBtnsGimmick.astro";

type Props = {
  title: string;
};

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-dark-bg">
    <div
      class="bg-light-bg container mx-auto relative shadow-realistic-solid border-2 border-black mt-20"
    >
      <ControlBtnsGimmick className="absolute top-1 right-1" />

      <slot />
    </div>
    <!-- <NavbarsContainer/> -->
    <div class="dot-pattern"></div>
  </body>
</html>

<style is:inline>
  .dot-pattern {
    position: fixed;
    left: 0;
    bottom: 20%; /* Start the pattern from 20% up from the bottom */
    top: 20%; /* End the pattern 20% from the top */
    width: 40px; /* Adjust as needed */
    background-image: radial-gradient(
      rgba(97, 0, 90, 0.635) 1px,
      transparent 1px
    );
    background-size: 10px 10px; /* Size of each dot and spacing */
  }

  main {
    font-family: "Poppins", "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  }
</style>
