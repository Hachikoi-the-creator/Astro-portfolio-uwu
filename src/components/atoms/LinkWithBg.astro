---
import { Image } from "astro:assets";
import { cn } from "../../lib/tailwind";
import linkSvg from "~/assets/svgs/link.svg";

type Props = {
  href: string;
  text: string;
  ariaLabel: string;
  className?: string;
};

const { href, text, ariaLabel, className } = Astro.props;
---

<a
  class={cn(
    "bg-pink-300 rounded-lg px-2 py-1.5 font-bold text-xl flex justify-between flex-1",
    className
  )}
  href={href}
>
  <span>
    {text}
  </span>
  <Image src={linkSvg} class="w-3 h-3" alt={`link to goto ${ariaLabel}`} />
</a>
