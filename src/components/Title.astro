---
import { cn } from "~/lib/tailwind";

type Props = { titleText: string; className?: string; isSubtitle?: boolean };

const { titleText, className, isSubtitle } = Astro.props;
---

{
  isSubtitle ? (
    <h2
      class={cn(
        "text-3xl md:text-4xl lg:text-5xl font-bold text-center",
        className
      )}
    >
      {titleText}
    </h2>
  ) : (
    <h1
      class={cn(
        "text-3xl md:text-4xl lg:text-5xl font-bold text-center",
        className
      )}
    >
      {titleText}
    </h1>
  )
}
